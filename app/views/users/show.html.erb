<h1><%= @user.name %></h1>
<p>This is <%= @user.name %>'s profile page.</p>

<nav>
  <%= link_to "Edit #{@user.name}'s Information", edit_user_path(@user) %>
  <%= link_to "Delete #{@user.name}", user_path(@user), method: :delete, data: {confirm: "Are you sure you want to delete #{@user.name}? #{@user.name} is really nice."} %>
</nav>